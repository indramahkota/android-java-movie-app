<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_background_elevation"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/img_poster"
        android:maxLines="2"
        android:text="@string/title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_overview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/txt_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/img_poster"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/long_text" />

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/img_poster"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/img_poster"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_star_yellow_24dp" />

    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/img_poster"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/img_star"
        android:text="@string/title" />

    <ImageView
        android:id="@+id/img_date"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/img_poster"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/txt_rating"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_date_range_black_24dp" />

    <TextView
        android:id="@+id/txt_release_date"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/img_poster"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/img_date"
        android:gravity="center_vertical"
        android:text="@string/title"
        android:textSize="12sp" />

</RelativeLayout>